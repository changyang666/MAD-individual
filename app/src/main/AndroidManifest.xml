<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="my.edu.utar.splitbill">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplitBill">
        <activity
            android:name=".CustomAmount"
            android:exported="false"
            android:label="Custom Amount Break-down"/>
        <activity
            android:name=".CustomPercentage"
            android:exported="false"
            android:label="Percentage Break-down"/>
        <activity
            android:name=".history"
            android:exported="false"
            android:label="History"/>
        <activity
            android:name=".EqualSplit"
            android:exported="false"
            android:label="Equal Break-down"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>